        function handleZipAppUpload(event) {
            // ZIP app upload handler
            const file = event.target.files[0];
            const title = document.getElementById('zipAppTitle').value.trim();
            
            if (!file) return;
            if (!title) {
                showNotification('XÉ™ta', 'TÉ™tbiq baÅŸlÄ±ÄŸÄ±nÄ± daxil edin!', 'error');
                return;
            }
            
            const appInfo = {
                id: Date.now(),
                title: title,
                fileName: file.name,
                fileSize: file.size,
                type: 'zip',
                description: document.getElementById('zipAppDescription').value.trim() || 'ZIP formatÄ±nda tÉ™tbiq',
                addedDate: new Date().toLocaleDateString('az-AZ'),
                status: 'completed',
                file: file
            };
            
            uploadedApps.push(appInfo);
            document.getElementById('zipAppTitle').value = '';
            document.getElementById('zipAppDescription').value = '';
            event.target.value = '';
            
            filterApps(currentAppFilter);
            autoSaveData();
            showNotification('ZIP TÉ™tbiqi ÆlavÉ™ Edildi', `"${title}" tÉ™tbiq kitabxanasÄ±na É™lavÉ™ edildi`, 'success');
        }

