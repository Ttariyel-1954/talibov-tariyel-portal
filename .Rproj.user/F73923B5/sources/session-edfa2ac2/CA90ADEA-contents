        function downloadApp(appId) {
            const app = uploadedApps.find(a => a.id === appId);
            if (!app || !app.file) {
                showNotification('XÉ™ta', 'Fayl yÃ¼klÉ™nmÉ™ Ã¼Ã§Ã¼n É™lÃ§atan deyil', 'error');
                return;
            }
            
            const url = URL.createObjectURL(app.file);
            const a = document.createElement('a');
            a.href = url;
            a.download = app.fileName;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            showNotification('YÃ¼klÉ™nir', `${app.title} yÃ¼klÉ™nmÉ™yÉ™ baÅŸladÄ±`, 'success');
        }

        function editApp(appId) {
            showNotification('RedaktÉ™', 'TÉ™tbiq redaktÉ™ funksiyasÄ± hazÄ±rlanÄ±r...', 'info');
        }
